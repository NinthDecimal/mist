#!/usr/bin/env bash

export MIST_HOME="$( cd "$( dirname "${BASH_SOURCE[0]}" )/../" && pwd )"

runner="local"
external_id=""
config=""
jar=""
run_options=""
parameters="{}"

cmd=$1

shift
while [[ $# > 1 ]]
do
  key="$1"

  case ${key} in
    --namespace)
      namespace="$2"
      shift
      ;;
      
    --config)
      config="$2"
      shift
      ;;
      
    --jar)
      jar="$2"
      shift
      ;;

    --run-options)
      run_options="$2"
      shift
      ;;
      
    --repositories)
      repositories="$2"
      shift
      ;;
      
    --packages)
      packages="$2"
      shift
      ;;
    
    --exclude-packages)
      exclude_packages="$2"
      shift
      ;;
      
    --jars)
      jars="$2"
      shift
      ;;

  esac

shift
done

if [ "${cmd}" == 'start' ]
then
  hash=$(echo -n ${namespace} | md5sum | awk '{print $1}') 
  python ${MIST_HOME}/scripts/create-singularity-json.py ${namespace} ${config} ${jar} ${repositories} ${packages} ${exclude_packages} ${jars} ${hash}
  ~/.local/bin/nd-singularity -s singularity-21.jiwiredev.com deploy -f ${MIST_HOME}/configs/pca-mist-worker-example.json -r --retry=99
elif [ "${cmd}" == 'stop' ]
then
  echo "stop"
  hash=$(echo -n ${namespace} | md5sum | awk '{print $1}') 
  curl -X DELETE singularity-21.jiwiredev.com/singularity/api/requests/request/dev-pca-mist-worker-${hash}
fi